<%- include('partials/header') %>
<!DOCTYPE html >
<html lang="en">
<head>
    <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Document</title>
            <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <h4 class="mb-5">Edit your post</h4>
        <form method="post" action="/update/<%= post._id %>">
            <textarea 
                placeholder="Show your creativity" 
                class="p-3 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md" 
                name="content"><%= post.content %></textarea>
            <input class="px-3 py-1 bg-yellow-500 text-black block rounded-md mt-2 text-sm" type="submit" value="Update">
        </form>
    </div>
</body>
</html>