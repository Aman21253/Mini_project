<!DOCTYPE html >
<html lang="en">
<head>
    <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Document</title>
            <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="w-full flex justify-end">
            <a class="bg-red-500 px-3 py-2 rounded-md text-sm mb-5 inline-block" href="/logout">Logout</a>
        </div>
        <h3 class="text-3xl mb-5"><span class="font-light">Hello</span>, <%= user.name %></h3>
        <h4 class="mb-5">You can create your new post</h4>
        <form method="post" action="/post">
            <textarea 
                placeholder="Show your creativity" 
                class="p-3 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md" 
                name="content"></textarea>
            <input class="px-3 py-1 bg-blue-500 block rounded-md mt-2 text-sm" type="submit" value="Create">
        </form>
        <div class= "posts mt-15">
            <h3 class="text-xl text-zinc-400">Your posts</h3>
            <div class="postContainer mt-5">
                <% user.posts.reverse().forEach(function(post){ %>
                    <div class="post w-1/3 p-4 border-2 border-zinc-800 mb-4 mt-2 bg-zinc-800">
                        <h4 class="text-blue-400 mb-2"> @<%= user.name %></h4>
                        <p class="text-sm tracking-tight">Content: <%= post.content %></p>
                        <small class="mt-2 initial-block"><%= post.likes ? post.likes.length : 0 %> likes</small>
                        <div class="btns flex gap-4 mt-1">
                            <a class="text-red-500" href="/like/<%= post._id %>">
                                <%= post.likes.indexOf(user._id)? "Like" : "Unlike" %> </a>
                            <a class="text-zinc-500" href="/edit/<%= post._id %>">Edit</a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</body>
</html>